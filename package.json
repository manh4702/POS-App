{
  "name": "pos-app",
  "version": "1.0.0",
  "description": "Ứng dụng quản lý cửa hàng",
  "author": {
    "name": "ManhDai",
    "email": "manhddse161260@gmail.com"
  },
  "main": "backend/build/main.js",
  "scripts": {
    "start": "concurrently \"npm run start-backend\" \"npm run start-frontend\"",
    "start-backend": "cd backend && npm start",
    "start-frontend": "cd frontend && npm start",
    "build-frontend": "cd frontend && npm run build",
    "build-backend": "cd backend && npm run build",
    "build": "npm run build-frontend && npm run build-backend",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "make-installer": "npm run build && npm run dist"
  },
  "dependencies": {
    "@journeyapps/sqlcipher": "^5.3.1",
    "cors": "^2.8.5",
    "electron-is-dev": "^2.0.0",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.pos.app",
    "productName": "POS App",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "package.json",
      "node_modules/**/*",
      "backend/build/**/*",
      "!backend/build/app/**/*"
    ],
    "extraResources": [
      {
        "from": "frontend/build",
        "to": "app",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "frontend/public/logo.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "asar": true,
    "asarUnpack": [
      "node_modules/@journeyapps/sqlcipher/**/*",
      "backend/build/preload.js"
    ]
  }
}
